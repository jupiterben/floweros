{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Next.js: debug server-side",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "pnpm",
        "runtimeArgs": ["run", "dev"],
        "console": "integratedTerminal",
        "env": {
          "NODE_OPTIONS": "--inspect"
        },
        "skipFiles": [
          "<node_internals>/**",
          "${workspaceFolder}/node_modules/**",
          "${workspaceFolder}/.next/**"
        ],
        "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
        ],
        "sourceMaps": true,
        "smartStep": true
      },
      {
        "name": "Next.js: debug client-side",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:8999",
        "webRoot": "${workspaceFolder}",
        "sourceMapPathOverrides": {
          "webpack://_N_E/*": "${webRoot}/*",
          "webpack:///./*": "${webRoot}/*",
          "webpack:///./~/*": "${webRoot}/node_modules/*"
        },
        "skipFiles": [
          "${webRoot}/node_modules/**/*.js",
          "${webRoot}/.next/**/*.js",
          "<node_internals>/**/*.js"
        ]
      },
      {
        "name": "Next.js: debug full-stack",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "pnpm",
        "runtimeArgs": ["run", "dev"],
        "console": "integratedTerminal",
        "env": {
          "NODE_OPTIONS": "--inspect"
        },
        "skipFiles": [
          "<node_internals>/**",
          "${workspaceFolder}/node_modules/**",
          "${workspaceFolder}/.next/**"
        ],
        "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
        ],
        "sourceMaps": true,
        "smartStep": true,
        "serverReadyAction": {
          "pattern": "ready - started server on .+, url: (https?://localhost:[0-9]+)",
          "uriFormat": "%s",
          "action": "debugWithChrome"
        }
      },
      {
        "name": "Next.js: debug API routes",
        "type": "node",
        "request": "attach",
        "port": 9229,
        "skipFiles": [
          "<node_internals>/**",
          "${workspaceFolder}/node_modules/**",
          "${workspaceFolder}/.next/**"
        ],
        "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
        ],
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "${workspaceFolder}",
        "sourceMaps": true
      }
    ]
  }